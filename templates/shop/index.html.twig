{% extends 'header.html.twig' %}

{% block body %}

<main class="mainShop">
    <section class="filter">
        <form method="get" action="{{ path('app_shop') }}">
            <label for="price_filter"></label>
            <select id="price_filter" name="price_filter" onchange="this.form.submit()">
                <option value="all" {% if priceFilter == 'all' %}selected{% endif %}>Fourchette de prix</option>
                <option value="10-29" {% if priceFilter == '10-29' %}selected{% endif %}>10 € - 29 €</option>
                <option value="29-35" {% if priceFilter == '29-35' %}selected{% endif %}>29 € - 35 €</option>
                <option value="35-50" {% if priceFilter == '35-50' %}selected{% endif %}>35 € - 50 €</option>
            </select>
        </form>
    </section>

    <section class="shop-product">
        {% for sweatshirt in sweatshirts %}
            <article class="prod-list">
                <img src="{{asset ('uploads/images/sweatshirts/' ~ sweatshirt.imageName) }}">
                <div class="shop-info">
                    <div>
                        <h3>{{ sweatshirt.name }}</h3>
                        <p>{{ sweatshirt.price }}</p>
                    </div>
                    <button class="btn"><a href=" {{path('app_product_show', {'id': sweatshirt.id}) }} ">Voir</a></button>
                </div>
            </article> 
        {% endfor %}
    </section>  
</main>

{% endblock %}
