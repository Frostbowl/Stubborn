<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Mon Site{% endblock %}</title>
    <link rel="stylesheet" href="{{ asset('styles/app.css') }}">
    <link rel="stylesheet" href="{{ asset('styles/product.css')}}">
    <link rel="stylesheet" href="{{asset('styles/home.css')}}">
    <link rel="stylesheet" href="{{asset('styles/login.css')}}">
    <link rel="stylesheet" href="{{asset('styles/shop.css')}}">
    <link rel="stylesheet" href="{{asset('styles/cart.css')}}">
</head>
<body class="wrapper">
    {% block header %}
    <header>
        <figure>
            <img src="{{ asset('images/Logo.png') }}" alt="Logo Stubborn">
            <figcaption>Dont't comprimise on your look</figcaption>
        </figure>
        
        <nav>
            <a href="{{ path('app_home') }}" class="{{ app.request.attributes.get('_route') == 'app_home' ? 'active' : '' }}">Accueil</a>
            {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                <a href="{{ path('app_sweatshirt_list') }}" class="{{ app.request.attributes.get('_route') == 'app_sweatshirt_list' ? 'active' : '' }}">Back-Office</a>
                <a href="{{ path('app_shop') }}" class="{{ app.request.attributes.get('_route') == 'app_shop' ? 'active' : '' }}">Boutique</a>
                <a href="{{ path('app_cart') }}" class="{{ app.request.attributes.get('_route') == 'app_cart' ? 'active' : '' }}">Panier</a>
                <a href="{{ path('app_logout') }}" class="{{ app.request.attributes.get('_route') == 'app_logout' ? 'active' : '' }}">Se déconnecter</a>
            {% else %}
                <a href="{{ path('app_login') }}" class="{{ app.request.attributes.get('_route') == 'app_login' ? 'active' : '' }}">Connexion</a>
                <a href="{{ path('app_register') }}" class="{{ app.request.attributes.get('_route') == 'app_register' ? 'active' : '' }}">Inscription</a>
            {% endif %}
        </nav>
    </header>
    {% endblock %}

    {% block body %}
    <!-- Contenu de la page -->
    {% endblock %}

    {% block footer %}

    <footer class="information">
        <h2>Informations de la société</h2>
        <p>Nom de la société: Stubborn<p>
        <p>Addresse: Piccadilly Circus, London W1J 0DA, Royaume Uni<p>
        <p>Addresse de contact stubborn@blabla.com<p>
    </footer>
    {% endblock %}

    <script src="{{ asset('script.js') }}"></script>
</body>
</html>